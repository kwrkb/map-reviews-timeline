{
  "name": "map-reviews-timeline",
  "version": "1.0.0",
  "description": "Google Maps上で表示している範囲内のスポットの口コミをタイムラインUIで一覧表示するWebアプリ",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/google.maps": "^3.55.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
